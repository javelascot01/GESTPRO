<Page x:Class="GESTPRO.view.PagUsuario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GESTPRO.view"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="600"
      Title="PagUsuario"
      ShowsNavigationUI="False"
      >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" Margin="10,0,10,0">
            <ComboBox x:Name="cbUsuarios" Margin="0,20,0,0"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <StackPanel VerticalAlignment="Center">
                <Label Content="Usuario" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
                <TextBox x:Name="txtUsuario" Width="120" Height="20"></TextBox>
            </StackPanel>
            <StackPanel VerticalAlignment="Center" Margin="3,0,0,0">
                <Label Content="Contraseña" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
                <PasswordBox x:Name="txtPass" Width="120" Height="20"></PasswordBox>
            </StackPanel>

            <Button x:Name="btnReg" Width="120" Height="30" Content="Registrar y recargar" Margin="3,20,0,0" Click="btnReg_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
